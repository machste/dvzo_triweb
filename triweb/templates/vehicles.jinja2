{% extends "layout.jinja2" %}

{% block content %}
<div class="container content">
  <h1>Fahrzeuge Verwalten</h1>
  {% if vehicles | count > 0 %}
    <div class="table-responsive">
      <table class="table table-hover">
        <caption>Liste aller Fahrzeuge</caption>
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Art</th>
            <th scope="col"><abbr title="National Vehicle Register">NVR</abbr></th>
            <th scope="col">Götti</th>
            <th scope="col">Status</th>
            {% if request.has_permission('administrate') %}
              <th scope="col"></th>
            {% endif %}
          </tr>
        </thead>
        <tbody>
          {% for vehicle in vehicles %}
            <tr>
              <th scope="row">{{ loop.index }}</th>
              <td>{{ vehicle.display_name }}</td>
              <td>{{ types.get(vehicle.type, '') }}</td>
              <td>{{ vehicle.nvr | d('', True) }}</td>
              <td class="text-nowrap">{{ vehicle.manager.display_name if vehicle.manager is not none }}</td>
              <td class="text-nowrap">{{ states.get(vehicle.state, 'Unbekannt') }}</td>
              <td>
                {% if request.has_permission('administrate') %}
                  <a class="btn btn-outline-secondary btn-sm" href="{{ request.route_url('vehicle.edit', id=vehicle.id) }}"><i class="bi bi-pencil-square"></i></a>
                  <button type="button" class="btn btn-outline-danger btn-sm" onclick="show_archive_dialog({{ vehicle.id }}, '{{ vehicle.display_name }}')"><i class="bi bi-trash3"></i></button>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% else %}
    <div class="alert alert-warning d-flex align-items-center my-4" role="alert">
      <i class="bi bi-exclamation-triangle-fill flex-shrink-0 alert-icon"></i>
      <div>
        Es wurden keine Fahrzeuge gefunden!
      </div>
    </div>
  {% endif %}
  {% if request.has_permission('administrate') %}
    <a class="btn btn-primary" href="{{ request.route_url('vehicle.add') }}">Fahrzeug hinzufügen</a>
  {% endif %}
</div>

<!-- Dialog Fahrzeug Archivieren -->
<div class="modal fade" id="archive_modal" data-bs-backdrop="static" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5">Fahrzeug Archivieren</h1>
        <button type="button" class="btn-close" onclick="hide_archive_dialog()"></button>
      </div>
      <div class="modal-body">
        Möchtest du das Fahrzeug "<span id="vehicle_display_name">Unbekannt</span>" wirklich archivieren?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="hide_archive_dialog()">Abbrechen</button>
        <button type="button" class="btn btn-danger" onclick="archive_vehicle(this)">Archivieren</button>
      </div>
    </div>
  </div>
</div>

<script>
  const archive_modal = new bootstrap.Modal("#archive_modal");
  let selected_vehicle_id = -1;
  
  function show_archive_dialog(vehicle_id, vehicle_display_name) {
    const title_span = document.getElementById("vehicle_display_name");
    selected_vehicle_id = vehicle_id;
    title_span.innerText = vehicle_display_name;
    archive_modal.show();
  }

  function hide_archive_dialog() {
    selected_vehicle_id = -1;
    archive_modal.hide();
  }

  function archive_vehicle() {
    if (selected_vehicle_id < 0) {
      return;
    }
    let url = `/rest/vehicle/${selected_vehicle_id}/archive`
    fetch(url)
      .then(response => {
        if (!response.ok) {
          throw new Error(`URL: '${url}' is not reachable!`);
        }
        response.json()
          .then(data => {
            if (data.ok) {
              console.log('vehicle archive: ok');
              document.location.reload();
            }
          })
      })
      .catch(error => {
        console.log(`vehicle archive: ${error}`);
      })
    selected_vehicle_id = -1;
  }
</script>
{% endblock content %}
