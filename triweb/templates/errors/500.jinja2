{% extends "layout.jinja2" %}

{% block content %}
<div class="container my-5">
  <h1><span class="font-semi-bold">500</span> - Interner Fehler!</h1>
  <div class="alert alert-danger d-flex align-items-center my-4" role="alert">
    <i class="bi bi-exclamation-triangle-fill flex-shrink-0 alert-icon"></i>
    <div>
      <b>{{ topic | postfix(': ')}}</b>{{ message }}
    </div>
  </div>
</div>
{% endblock content %}
